#!/bin/sh

set -e

# update-alternatives on things that collide with xemacs, other editors
for alt in @ALTERNATIVES@
do
    base=$(echo $alt | perl -pe 's/@SUFFIX@$//')
    update-alternatives \
        --install /usr/bin/$base $base /usr/bin/$alt 27 \
        --slave /usr/share/man/man1/$base.1.gz $base.1.gz \
                /usr/share/man/man1/$alt.1.gz
done

